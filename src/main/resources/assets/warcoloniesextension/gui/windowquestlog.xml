<window size="190 244" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/main/src/main/resources/assets/blockui/gui/block_ui.xsd">
    <image source="warcoloniesextension:textures/gui/builderhut/builder_paper_sketch.png" size="100% 100%"/>
    <image source="warcoloniesextension:textures/gui/builderhut/builder_sketch_left.png" size="6 15" pos="34 12"/>
    <image source="warcoloniesextension:textures/gui/builderhut/builder_sketch_center.png" size="110 15" pos="40 12"/>
    <image source="warcoloniesextension:textures/gui/builderhut/builder_sketch_right.png" size="6 15" pos="150 12"/>

    <text size="100% 11" pos="0 14" color="black" textalign="MIDDLE"
           label="$(com.minecolonies.coremod.item.questlog.gui.title)"/>

    
    

    <switch id="pages" size="160 203" pos="15 30" endless="true">
        <view id="pageInProgress">
            <text size="100% 11" pos="0 0" color="black" textalign="MIDDLE"
                   label="$(com.minecolonies.coremod.item.questlog.gui.inprogress)"/>

            <list id="quests" size="160 187" pos="0 15">
                <view size="100% 45">
                    <text id="questName" size="130 11" pos="0 0" color="black"/>
                    <text id="questGiver" size="130 11" pos="0 15" color="black"/>
                    <text id="questObjective" size="130 11" pos="0 30" color="black"/>
                    
                </view>
            </list>
        </view>
        <view id="pageAvailable">
            <text size="100% 11" pos="0 0" color="black" textalign="MIDDLE"
                   label="$(com.minecolonies.coremod.item.questlog.gui.available)"/>

            <list id="quests" size="160 187" pos="0 15">
                <view size="100% 30">
                    <text id="questName" size="130 11" pos="0 0" color="black"/>
                    <text id="questGiver" size="130 11" pos="0 15" color="black"/>
                    
                </view>
            </list>
        </view>
        <view id="pageFinished">
            <text size="100% 11" pos="0 0" color="black" textalign="MIDDLE"
                   label="$(com.minecolonies.coremod.item.questlog.gui.finished)"/>

            <list id="quests" size="160 187" pos="0 15">
                <view size="100% 30">
                    <text id="questName" size="130 11" pos="0 0" color="black"/>
                    <text id="questCompletedCount" size="130 11" pos="0 15" color="black"/>
                </view>
            </list>
        </view>
    </switch>
</window>
